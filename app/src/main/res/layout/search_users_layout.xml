<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_img_search"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/user_male">

    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/profile_img_search"
        android:layout_centerInParent="true"
        android:layout_marginLeft="12dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_online"
        android:layout_width="17dp"
        android:layout_height="17dp"
        app:civ_border_color="#123212"
        app:civ_border_width="12dp"
        android:drawable="@android:color/holo_blue_dark"
        android:layout_below="@+id/username"
        android:src="@drawable/user_male"
        android:layout_marginLeft="-10dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/profile_img_search"
        android:visibility="gone"
        >
    </de.hdodenhof.circleimageview.CircleImageView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_offline"
        android:layout_width="17dp"
        android:layout_height="17dp"
        app:civ_border_color="#123212"
        app:civ_border_width="12dp"
        android:drawable="@android:color/tertiary_text_light"
        android:layout_below="@+id/username"
        android:layout_marginLeft="-10dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/profile_img_search"
        android:visibility="gone"
        >
    </de.hdodenhof.circleimageview.CircleImageView>
    <TextView
        android:id="@+id/latest_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/profile_img_search"
        android:layout_below="@+id/username"
        android:maxLines="1"
        android:padding="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="14dp"
        android:textColor="@android:color/holo_blue_light"
        />


</RelativeLayout>